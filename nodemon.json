{
  "watch": ["src"],
  "ext": "js,json",
  "ignore": [
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "tests/**",
    "node_modules/**",
    "logs/**",
    "*.log"
  ],
  "env": {
    "NODE_ENV": "development",
    "LOG_LEVEL": "error",
    "LOG_TO_CONSOLE": "true",
    "LOG_TO_FILE": "false",
    "FEATURE_AUDIT_LOGGING": "false",
    "FEATURE_METRICS": "false"
  },
  "exec": "node --experimental-specifier-resolution=node src/index.js",
  "delay": "1000",
  "verbose": false,
  "colours": false,
  "quiet": true,
  "restartable": "rs",
  "legacyWatch": true,
  "pollingInterval": 1000,
  "events": {
    "restart": "echo 'ðŸ”„ App restarted due to changes...'",
    "crash": "echo 'ðŸ’¥ App crashed! Check logs for details.'"
  }
} 